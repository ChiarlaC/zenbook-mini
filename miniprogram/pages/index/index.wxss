/** index.wxss */
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}

.balance-section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.balance-label {
  font-size: 14px;
  color: #666666; /* Soft Gray */
  margin-bottom: 10px;
  letter-spacing: 1px;
}

.balance-value {
  font-size: 48px;
  font-weight: bold;
  color: #333333; /* Black */
}

/* FAB */
.fab-container {
  position: absolute;
  bottom: 40px;
  right: 30px;
  z-index: 10;
}

.fab-button {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  background-color: #333333;
  color: #ffffff;
  font-size: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
}

/* Modal */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent black */
  z-index: 20;
  display: flex;
  align-items: flex-end; /* Align to bottom */
}

.modal-content {
  width: 100%;
  background-color: #ffffff;
  padding: 30px 20px 40px; /* Extra padding at bottom for iOS home bar */
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  animation: slideUp 0.3s ease-out;
}

.flash-input {
  width: 100%;
  height: 50px;
  background-color: #F5F5F5;
  border-radius: 12px;
  padding: 0 20px;
  font-size: 18px;
  color: #333;
}

.input-hint {
  margin-top: 10px;
  font-size: 12px;
  color: #999;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}
